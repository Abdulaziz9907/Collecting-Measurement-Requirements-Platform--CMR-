@page "/login"

<div class="login-bg">
    <div class="login-container">
        <div class="login-card">
            <h2 class="login-title">تسجيل دخول</h2>
            <div class="mb-3">
                <label class="form-label" for="username">
                    <span class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="#888" viewBox="0 0 24 24">
                            <path
                                d="M12 12c2.7 0 8 1.34 8 4v2H4v-2c0-2.66 5.3-4 8-4zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8z" />
                        </svg>
                    </span>
                    اسم المستخدم
                </label>
                <input id="username" class="form-control" @bind="username" dir="rtl" autocomplete="username" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">
                    <span class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="#888" viewBox="0 0 24 24">
                            <path
                                d="M12 17a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm6-7V7a6 6 0 0 0-12 0v3a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-7a2 2 0 0 0-2-2zm-8-3a4 4 0 0 1 8 0v3H6V7zm10 12H6v-7h12v7z" />
                        </svg>
                    </span>
                    كلمة المرور
                </label>
                <input id="password" type="password" class="form-control" @bind="password" dir="rtl"
                    autocomplete="current-password" />
            </div>
            <div class="mb-3 text-end">
                <a href="#" class="forgot-link">نسيت كلمة المرور؟</a>
            </div>
            <button class="btn btn-primary w-100" @onclick="HandleLogin">دخول</button>
            @if (!string.IsNullOrEmpty(message))
            {
                <div class="mt-2 alert alert-info text-center">@message</div>
            }
        </div>
    </div>
</div>